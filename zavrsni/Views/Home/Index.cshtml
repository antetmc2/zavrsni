@model zavrsni.Models.HomeContentModel
@using Microsoft.AspNet.Identity
@using zavrsni.Helpers
@{
    ViewBag.Title = "Home Page";
}

@if (!Request.IsAuthenticated)
{
    <h1>Welcome to <span style="font-family: Pacifico; color: #C40000; font-weight: 200;">Traveler</span>, the new web application for travel planning!</h1>
    <br/>
    <h4>Are you interested in joining this site? If you are, @Html.ActionLink("don't forget to log in here!", "Login", "Account", routeValues: null, htmlAttributes: new {id = "loginLink"})</h4>
    <br/>
    <h4>New user? @Html.ActionLink("Click here to register!", "Register", "Account", routeValues: null, htmlAttributes: new {id = "registerLink"})</h4>
    <br/>
    <h4>Don't forget to check some of our most popular pages:</h4>
    foreach (var item in Model.topPages)
     {
         <p>@item.name</p>
     }
}

@if (Request.IsAuthenticated)
{
    <h2>15 most recent contents:</h2>
    <div class="row">
        <div id="container" class="js-masonry" data-masonry-options='{ "columnWidth": 280, "itemSelector": ".item" }'>
            @foreach (Content c in Model.contents)
            {
                <div class="col-md-4 col-sm-6 item">
                    <div class="thumbnail content" style="padding: 2px 2px 2px 2px !important;">
                        <div class="caption" style="padding: 3px 3px 3px 3px !important;">
                            <h2>@c.Title</h2>
                            @Html.Raw(c.Text.ParseHTML().Truncate())
                            @if (c.Text.ParseHTML().Truncate().Contains("..."))
                            {
                                <span>(<a href="@Url.Action("Details", "Content", new { IDcontent = c.IDcontent, Username = User.Identity.GetUserName() })">more</a>)</span>
                            }
                            <div class="text-right"><a href="@Url.Action("Details", "Content", new { IDcontent = c.IDcontent, Username = User.Identity.GetUserName() })"><span class="btn btn-special glyphicon glyphicon-list" aria-hidden="true"></span></a></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <a href="@Url.Action("Insert", "Content")"><span class="btn btn-primary btn-circle btn-lg glyphicon glyphicon-plus" style="position: fixed; top: 90%; right: 20px;"></span></a>
}