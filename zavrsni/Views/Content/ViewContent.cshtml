@model zavrsni.Models.IndexContentModel
@{
    ViewBag.Title = "ViewContent";
}

<h4>View all your published contents:</h4>

<div class="row">
    <div id="container" class="js-masonry" data-masonry-options='{ "columnWidth": 280, "itemSelector": ".item" }'>
        @foreach (Content c in Model.contents)
        {
            <div class="col-md-4 col-sm-6 item">
                <div class="thumbnail content" style="padding: 2px 2px 2px 2px !important;">
                    <div class="caption" style="padding: 3px 3px 3px 3px !important;">
                        <h2>@c.Title</h2>
                        @Html.Raw(c.Text)
                        <a href="@Url.Action("Edit", "Content", new {IDcontent = c.IDcontent})"><span class="btn btn-success glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="@Url.Action("Details", "Content", new {IDcontent = c.IDcontent})"><span class="btn btn-info glyphicon glyphicon-list" aria-hidden="true"></span></a>
                        <a href="@Url.Action("Delete", "Content", new {IDcontent = c.IDcontent})"><span class="btn btn-danger glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<a href="@Url.Action("Insert", "Content")"><span class="btn btn-primary btn-circle btn-lg glyphicon glyphicon-plus" style="position: fixed; top: 90%; right: 20px;"></span></a>