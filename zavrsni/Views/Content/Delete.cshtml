@model zavrsni.Models.UsernameModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center" style="margin-bottom: 30px;">Are you sure that you want to delete this content?</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="text-center">
        <input type="submit" class="btn btn-success" value="Yes, delete the selected content"/>
        <a href="@Url.Action("ViewContent", "Content", new {Username = Model.Username})"><span class="btn btn-danger">No, take me back to the list of contents</span></a>
    </div>
}
<br/>