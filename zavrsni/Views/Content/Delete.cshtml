
@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center" style="margin-bottom: 30px;">Are you sure that you want to delete this content?</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="text-center">
        <input type="submit" class="btn btn-success" value="Yes, delete the selected content"/>
        @Html.ActionLink("No, take me back to the list of contents", "ViewContent", new { area = "" }, new { @class = "btn btn-danger" })
    </div>
}
<br/>