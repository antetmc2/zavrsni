@model zavrsni.Models.ContentDetails
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<table class="table details">
    <tr>
        <th>IDcontent</th>
        <td>@Model.IDcontent</td>
    </tr>
    <tr>
        <th>Title</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Author</th>
        <td>@Model.Author</td>
    </tr>
    <tr>
        <th>Content Type</th>
        <td>@Model.ContentType</td>
    </tr>
    <tr>
        <th>Used in locations</th>
        <td>
            @foreach (var item in Model.Locations)
            {
                <span>@item.City.CityName; </span>
            }
        </td>
    </tr>
    <tr>
        <th>Editor</th>
        <td>@Model.Editor</td>
    </tr>
    <tr>
        <th>Time changed</th>
        <td>@Model.TimeChanged</td>
    </tr>
</table>
<table class="table details">
    <tr>
        <th>Text</th>
        <td class="details-text">@Html.Raw(Model.Text)</td>
    </tr>
    @if (Request.IsAuthenticated)
    {
        <tr>
            <th>Actions</th>
            <td>
                @if (Model.Author == User.Identity.GetUserName())
                {
                    <a href="@Url.Action("Edit", "Content", new {IDcontent = Model.IDcontent})"><span class="btn btn-special glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Delete", "Content", new {IDcontent = Model.IDcontent})"><span class="btn btn-special glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                }
                else
                {
                    <span>Additional actions are not available!</span>
                }
            </td>
        </tr>
    }
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    if (Request.IsAuthenticated)
     {
         <div class="form-group">
             <div class="row">
                 @Html.LabelFor(model => model.Page, htmlAttributes: new {@class = "control-label col-md-2"})
                 <div class="col-md-10">
                     @Html.DropDownList("PageDropDown", Model.Page, "Select your page:", new {@class = "form-control"})
                     @Html.ValidationMessageFor(model => model.Page, "", new {@class = "text-danger"})
                 </div>
             </div>
         </div>
     }

    <div class="form-group">
        <div class="col-md-12">
            @if (Request.IsAuthenticated)
            {
                <input type="submit" class="btn btn-default" value="Save" />
            }
            @Html.ActionLink("Return", "ViewContent", new {area = ""}, new {@class = "btn btn-default"})
        </div>
    </div>
}



<p>
    Do you want to see the other contents you have posted? @Html.ActionLink("Go back to the list of your posted contents!", "ViewContent")
</p>