@using Microsoft.AspNet.Identity
@model zavrsni.Models.IndexPageModel
@{
    ViewBag.Title = "Index";
}

<h2 style="margin-bottom: 30px;">All pages published by @User.Identity.GetUserName():</h2>

<table class="table">
    <tr>
        <th>Page title</th>
        <th>Created at</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model.pages)
    {
        <tr>
            <td>
                @item.name
            </td>
            <td>
                @item.CreatedAt
            </td>
            <td style="width: 150px;">
                <a href="@Url.Action("Edit", "Page", new {IDpage = item.IDpage})"><span class="btn btn-special glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                <a href="@Url.Action("Details", "Page", new { IDpage = item.IDpage })"><span class="btn btn-special glyphicon glyphicon-list" aria-hidden="true"></span></a>
                <a href="@Url.Action("Delete", "Page", new { IDpage = item.IDpage })"><span class="btn btn-special glyphicon glyphicon-remove" aria-hidden="true"></span></a>
            </td>
        </tr>
    }

</table>

<p>
    Are you planning another vacation? @Html.ActionLink("Make a new page!", "NewPage")
</p>