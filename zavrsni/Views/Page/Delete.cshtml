@model zavrsni.Models.UsernameModel
@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center" style="margin-bottom: 30px;">Are you sure that you want to delete this page?</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="text-center">
        <input type="submit" class="btn btn-success" value="Yes, delete the selected page" />
        <a href="@Url.Action("Index", "Page", new { Username = Model.Username })"><span class="btn btn-danger">No, take me back to the list of pages</span></a>

    </div>
}
<br />