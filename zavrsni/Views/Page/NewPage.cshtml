@model zavrsni.Models.NewPageModel
@{
    ViewBag.Title = "NewPage";
}

<h2>Add a new page:</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Create a new page.</h4>
    <hr/>
    @Html.ValidationSummary("", new {@class = "text-danger"})
    <div class="form-group">
        @Html.LabelFor(m => m.PageTitle, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PageTitle, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
            @Html.LabelFor(model => model.Privacy, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("PrivacyDropDown", Model.Privacy, "Select your page:", new {@class = "form-control"})
            @Html.ValidationMessageFor(model => model.Privacy, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Add"/>
        </div>
    </div>
}