@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center" style="margin-bottom: 30px;">Are you sure that you want to remove this content from selected page?</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="text-center">
        <input type="submit" class="btn btn-success" value="Yes, remove the selected content" />
        @Html.ActionLink("No, take me back to the list of pages", "Index", new { area = "" }, new { @class = "btn btn-danger" })
    </div>
}
<br />